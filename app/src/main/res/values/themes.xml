<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="NightAdjusted.Theme.Weather" parent="android:Theme.Material.Light.NoActionBar" />

    <style name="Theme.Weather" parent="NightAdjusted.Theme.Weather" />

    <style name="NightAdjusted.Theme.Splash" parent="Theme.SplashScreen">
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">true</item>
    </style>

    <style name="Theme.Weather.Splash" parent="NightAdjusted.Theme.Splash">
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>
        <item name="windowSplashScreenBackground">@color/designsystem_icon_background</item>
        <item name="postSplashScreenTheme">@style/Theme.Weather</item>
    </style>
</resources>
